{
      "annotations": {
         "list": [ ]
      },
      "description": "Overview of MongoDB Atlas operation metrics.",
      "links": [
         {
            "keepTime": true,
            "title": "MongoDB Atlas cluster overview",
            "type": "link",
            "url": "/d/mongodb-atlas-cluster-overview"
         },
         {
            "keepTime": true,
            "title": "MongoDB Atlas elections overview",
            "type": "link",
            "url": "/d/mongodb-atlas-elections-overview"
         },
         {
            "keepTime": true,
            "title": "MongoDB Atlas performance overview",
            "type": "link",
            "url": "/d/mongodb-atlas-performance-overview"
         },
         {
            "keepTime": true,
            "title": "MongoDB Atlas sharding overview",
            "type": "link",
            "url": "/d/mongodb-atlas-sharding-overview"
         }
      ],
      "panels": [
         {
            "collapsed": false,
            "gridPos": {
               "h": 1,
               "w": 0,
               "x": 0,
               "y": 0
            },
            "id": 1,
            "panels": [ ],
            "title": "Overview",
            "type": "row"
         },
         {
            "datasource": {
               "type": "datasource",
               "uid": "-- Mixed --"
            },
            "description": "Disk read and write operations per second.",
            "fieldConfig": {
               "defaults": {
                  "unit": "ops"
               }
            },
            "gridPos": {
               "h": 8,
               "w": 24,
               "x": 0,
               "y": 1
            },
            "id": 2,
            "pluginVersion": "v11.0.0",
            "targets": [
               {
                  "datasource": {
                     "type": "prometheus",
                     "uid": "${datasource}"
                  },
                  "expr": "sum by (job,cl_name) (\n  rate(hardware_disk_metrics_read_count{job=~\"$job\", cl_name=~\"$cl_name\",job=~\"$job\",cl_name=~\"$cl_name\",instance=~\"$instance\"}[$__rate_interval])\n)",
                  "format": "time_series",
                  "instant": false,
                  "legendFormat": "{{cl_name}} - reads",
                  "refId": "Disk read operations"
               },
               {
                  "datasource": {
                     "type": "prometheus",
                     "uid": "${datasource}"
                  },
                  "expr": "sum by (job,cl_name) (\n  rate(hardware_disk_metrics_write_count{job=~\"$job\", cl_name=~\"$cl_name\",job=~\"$job\",cl_name=~\"$cl_name\",instance=~\"$instance\"}[$__rate_interval])\n)",
                  "format": "time_series",
                  "instant": false,
                  "legendFormat": "{{cl_name}} - writes",
                  "refId": "Disk write operations"
               }
            ],
            "title": "Disk operations",
            "type": "timeseries"
         }
      ],
      "refresh": "1m",
      "schemaVersion": 39,
      "tags": [
         "mongodb-atlas-mixin"
      ],
      "templating": {
         "list": [
            {
               "label": "Data source",
               "name": "datasource",
               "query": "prometheus",
               "regex": "",
               "type": "datasource"
            },
            {
               "allValue": ".+",
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "includeAll": true,
               "label": "Job",
               "multi": true,
               "name": "job",
               "query": "label_values(mongodb_network_bytesIn{job=~\"$job\", cl_name=~\"$cl_name\"}, job)",
               "refresh": 2,
               "sort": 1,
               "type": "query"
            },
            {
               "allValue": ".+",
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "includeAll": true,
               "label": "Cl_name",
               "multi": true,
               "name": "cl_name",
               "query": "label_values(mongodb_network_bytesIn{job=~\"$job\", cl_name=~\"$cl_name\",job=~\"$job\"}, cl_name)",
               "refresh": 2,
               "sort": 1,
               "type": "query"
            },
            {
               "allValue": ".+",
               "datasource": {
                  "type": "prometheus",
                  "uid": "${datasource}"
               },
               "includeAll": true,
               "label": "Instance",
               "multi": true,
               "name": "instance",
               "query": "label_values(mongodb_network_bytesIn{job=~\"$job\", cl_name=~\"$cl_name\",job=~\"$job\",cl_name=~\"$cl_name\"}, instance)",
               "refresh": 2,
               "sort": 1,
               "type": "query"
            }
         ]
      },
      "time": {
         "from": "now-30m",
         "to": "now"
      },
      "timezone": "default",
      "title": "MongoDB Atlas operations overview",
      "uid": "mongodb-atlas-operations-overview"
   }